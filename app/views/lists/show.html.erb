<p><strong><%= @list.name %> <%= @list.genre %></strong></p>
  <div class="list-group">
    <% @list.movies.each do |movie| %>
    <li><%= movie.title %></li>
    <li><%= movie.year %></li>
    <li><%= movie.description %></li>
    <li><%= movie.poster_url %></li>
    <li><%= movie.rating %></li>
    <li><%= link_to "remove this movie", list_bookmark_path(@list.movies), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></li>
    <% end %>
  </div>

  <%= link_to "Delete", list_path(@list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
  <%= link_to "Edit", edit_list_path(@list) %>
